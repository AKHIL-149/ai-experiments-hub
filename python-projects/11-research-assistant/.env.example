# Server Configuration
PORT=8000
HOST=0.0.0.0

# Database
# SQLite (default for development)
DATABASE_URL=sqlite:///./data/database.db
# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost/researchdb

# Session Configuration
SESSION_TTL_DAYS=30
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_SAMESITE=Strict

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# LLM Providers

# Ollama (local, default)
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# OpenAI (optional)
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4

# Anthropic (optional)
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Web Search Configuration
# DuckDuckGo is free and requires no API key
WEB_SEARCH_PROVIDER=duckduckgo
# Optional: Brave Search API ($5/month for 2000 queries)
# WEB_SEARCH_PROVIDER=brave
# BRAVE_API_KEY=your_brave_api_key_here

# Research Configuration
DEFAULT_MAX_SOURCES=20
DEFAULT_VERIFICATION_LEVEL=strict  # strict, standard, lenient
DEFAULT_CITATION_STYLE=APA  # APA, MLA, Chicago, IEEE

# Verification Levels
STRICT_MIN_SOURCES=3
STRICT_MIN_CONFIDENCE=0.8
STANDARD_MIN_SOURCES=2
STANDARD_MIN_CONFIDENCE=0.6
LENIENT_MIN_SOURCES=1
LENIENT_MIN_CONFIDENCE=0.4

# Caching Configuration
CACHE_DIR=./data/cache
ENABLE_CACHE=true
SEARCH_CACHE_TTL_DAYS=7
CONTENT_CACHE_TTL_DAYS=30
SYNTHESIS_CACHE_TTL_DAYS=14

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ChromaDB Configuration (Vector Store)
CHROMA_DIR=./data/chroma
CHROMA_COLLECTION_NAME=research_documents

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=50
ALLOWED_DOCUMENT_TYPES=pdf,txt,md,docx

# Output Configuration
OUTPUT_DIR=./data/output
DEFAULT_OUTPUT_FORMAT=markdown  # markdown, html, json, pdf

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=./data/logs/research.log

# Performance
MAX_WORKERS=4  # For parallel processing
REQUEST_TIMEOUT_SECONDS=300  # 5 minutes
